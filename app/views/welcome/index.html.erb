<div class="page-header"><h1>Tech Talent Recipes <small>A Totally Original Idea</small></h1></div>



<% if user_signed_in? %>

	<% if current_user.recipes.empty? %>
			<p>No recipes here...</p>
			<p>Start cookin'!</p>

	<% else %>
			<table>
				<thead>
				   <tr>
				    <th>Name</th>
				    <th>Picture</th>
				    <th>Category</th>
				    <th>Instructions</th>
				    <th>Minutes to Make</th>
				    <th></th>
				    <th></th>
				    <th></th>
				   </tr>
				</thead>

				<tbody>
				   <% current_user.recipes.each do |recipe| %>
				    	<tr>
				        <td><%= link_to recipe.name, recipe %></td>
				        <td><%= image_tag (recipe.picture_url), :width =>200 %></td>
				        <td><%= recipe.category %></td>
				        <td><%= recipe.instructions %></td>
				        <td><%= recipe.minutes_total %></td>
				        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
				        <td><%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>

		<% end %>
		<%= link_to 'New Recipe', new_recipe_path %></br>
		<%= link_to "Logout", destroy_user_session_path, method: :delete %>

<% else %>

	<div class="container">

		<div class="col-md-6">

			<h3>Welcome Back! Sign In:</h3><br />


		<%= render 'signin' %>

		</div>


		<div class="col-md-6">

			<h3>Not yet registered?</h3><br />

			<%= render 'signup' %>

		</div>

	</div>

<% end %>